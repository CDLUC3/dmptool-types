{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "textArea"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "labelTranslationKey": {
          "type": "string"
        },
        "maxLength": {
          "default": 10000,
          "type": "number"
        },
        "minLength": {
          "type": "number"
        },
        "pattern": {
          "type": "string"
        },
        "cols": {
          "default": 20,
          "type": "number"
        },
        "rows": {
          "default": 2,
          "type": "number"
        },
        "asRichText": {
          "default": true,
          "type": "boolean"
        }
      },
      "required": [
        "maxLength",
        "cols",
        "rows",
        "asRichText"
      ],
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "default": "1.0",
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "usageDescription": {
          "type": "string"
        }
      },
      "required": [
        "schemaVersion"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "type",
    "attributes",
    "meta"
  ],
  "additionalProperties": false
}