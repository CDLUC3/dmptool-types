{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "boolean"
    },
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "default": "1.0",
          "type": "string"
        }
      },
      "required": [
        "schemaVersion"
      ],
      "additionalProperties": false
    },
    "answer": {
      "default": false,
      "type": "boolean"
    },
    "comment": {
      "default": "",
      "type": "string"
    }
  },
  "required": [
    "type",
    "meta",
    "answer",
    "comment"
  ],
  "additionalProperties": false
}