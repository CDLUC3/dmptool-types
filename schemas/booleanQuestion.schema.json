{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "boolean"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "default": false,
          "type": "boolean"
        }
      },
      "required": [
        "label",
        "value"
      ],
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "default": "1.0",
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "usageDescription": {
          "type": "string"
        }
      },
      "required": [
        "schemaVersion"
      ],
      "additionalProperties": false
    },
    "showCommentField": {
      "type": "boolean"
    }
  },
  "required": [
    "type",
    "attributes",
    "meta"
  ],
  "additionalProperties": false
}