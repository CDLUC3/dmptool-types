{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "number"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "labelTranslationKey": {
          "type": "string"
        },
        "max": {
          "type": "number"
        },
        "min": {
          "default": 0,
          "type": "number"
        },
        "step": {
          "default": 1,
          "type": "number"
        }
      },
      "required": [
        "min",
        "step"
      ],
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "default": "1.0",
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "usageDescription": {
          "type": "string"
        }
      },
      "required": [
        "schemaVersion"
      ],
      "additionalProperties": false
    },
    "showCommentField": {
      "type": "boolean"
    }
  },
  "required": [
    "type",
    "attributes",
    "meta"
  ],
  "additionalProperties": false
}