{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "checkBoxes"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "labelTranslationKey": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "default": "1.0",
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "usageDescription": {
          "type": "string"
        }
      },
      "required": [
        "schemaVersion"
      ],
      "additionalProperties": false
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "default": "Option A",
            "type": "string"
          },
          "value": {
            "default": "a",
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "checked": {
            "default": false,
            "type": "boolean"
          }
        },
        "required": [
          "label",
          "value",
          "checked"
        ],
        "additionalProperties": false
      }
    },
    "showCommentField": {
      "type": "boolean"
    }
  },
  "required": [
    "type",
    "attributes",
    "meta",
    "options"
  ],
  "additionalProperties": false
}