{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "numberWithContext"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "help": {
          "type": "string"
        },
        "labelTranslationKey": {
          "type": "string"
        },
        "max": {
          "type": "number"
        },
        "min": {
          "default": 0,
          "type": "number"
        },
        "step": {
          "default": 1,
          "type": "number"
        },
        "context": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "default": "",
                "type": "string"
              },
              "labelTranslationKey": {
                "type": "string"
              },
              "value": {
                "default": "",
                "type": "string"
              },
              "selected": {
                "default": false,
                "type": "boolean"
              }
            },
            "required": [
              "label",
              "value",
              "selected"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "min",
        "step",
        "context"
      ],
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": {
          "default": "1.0",
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "usageDescription": {
          "type": "string"
        }
      },
      "required": [
        "schemaVersion"
      ],
      "additionalProperties": false
    },
    "showCommentField": {
      "type": "boolean"
    }
  },
  "required": [
    "type",
    "attributes",
    "meta"
  ],
  "additionalProperties": false
}